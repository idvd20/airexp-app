<header>
    <nav>
        <ul class="left">
          <%= link_to image_tag("airexp.png", size: "175x45"), root_path %>
        </ul>
        <ul class="right">
          <% if current_user %>
            <li>
              <%= link_to current_user.username, current_user %>
            </li>
            <li>
              <%= link_to "Account Settings", edit_user_path(current_user) %>
            </li>
            <li>
              <%= link_to 'Sign Out', session_path, data: {turbo_method: :delete}, class: "button" %>
            </li>
          <% else %>
            <li>
              <%= link_to 'Sign In', signin_path, class: "button" %>
            </li>
            <li>
              <%= link_to 'Sign Up', signup_path, class: "button" %>
            </li>          
          <% end %>          
        </ul>
    </nav>
</header>