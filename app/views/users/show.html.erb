<section class="user">
    <h1><%= @user.username %></h1>
    <h2><%= @user.name %></h2>
    <h2><%= mail_to(@user.email) %></h2>
    <h3>Member Since</h3>
    <p>
        <%= @user.created_at.strftime("%B %Y") %>
    </p>
    <div class="actions">
        <% if current_user?(@user) %>
            <%= link_to 'Edit Account', edit_user_path, class: "button edit" %>
        <% end %>
        <% if current_user_host? %>
            <%= link_to 'Delete Account', @user,
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
                class: "button delete" %>
        <% end %>
    </div>
    <% if @registrations.present? %>
        <h3>Registrations</h3>
        <% @registrations.each do |r| %>
            <div class="registration">
                <div class="image">
                    <%= link_to image_tag(r.experience.image_file_name), r.experience %>
                </div>
                <div class="name">
                    <%= link_to r.experience.title, r.experience %>
                </div>
                <div class="date">
                    <%= time_ago_in_words(r.created_at) %> ago
                </div>
            </div>
        <% end %>
    <% end %>
</section>