<% @experiences.each do |experience| %>
    <section class="experience">
        <div class="summary">
            <div class="image">
                <%= link_to image_tag(experience.image_file_name), experience %>
            </div>
            <span class="stars">
                <%= render "shared/stars", percent: experience.average_stars_as_percent %>
                <div class="rating">
                    <%= experience.average_stars %>
                </div>
                <div>
                    (<%= experience.likes.size %>)
                </div>
            </span>
            <h2><%= link_to experience.title, experience %> </h2>
            <%= price(experience) %>
        </div>
    </section>
<% end %>

<% if current_user_host? %>
    <section class="host ">
        <%= link_to 'Add New Experience', new_experience_path, class: "button" %>
    </section>
<% end %>