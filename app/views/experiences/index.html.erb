<% @experiences.each do |experience| %>
    <section class="experience">
        <div class="summary">
            <div class="image">
                <%= image_tag experience.image_file_name %>
            </div>
            <span class="stars">
                <%= render "shared/stars", percent: experience.average_stars_as_percent %>
                <div class="rating">
                    <%= experience.average_stars %>
                </div>
            </span>
            <h2><%= link_to experience.title, experience %> </h2>
            <span class="price"><strong>From <%= price(experience) %> </strong>/ person</span>
        </div>
    </section>
<% end %>

<section class="admin">
    <%= link_to 'Add New Experience', new_experience_path, class: "button" %>
</section>